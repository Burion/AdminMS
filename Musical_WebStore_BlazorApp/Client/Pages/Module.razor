@page "/modules/{Index}"
@using Musical_WebStore_BlazorApp.Shared
@using Admin.ViewModels
@inject IJSRuntime jsRuntime
@using Microsoft.AspNetCore.Blazor
@using System.IO;
@inject HttpClient client

<div class="row">
                    
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Map of your locations</h6>
            </div>
            <div class="card-body">
                <div id="map">
                    <img src="images/beer.jpg" width="100%" height="100%">
                </div>
            </div>                    
        </div>
    </div>

<div class="col-xl-8 col-lg-7">
    <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Map of your locations</h6>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Area Chart</h6>
                </div>
                <div class="card-body">
                  <div class="chart-area">
                    <canvas id="myAreaChart"></canvas>
                  </div>
                  <hr>
                </div>
              </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-boarded table-hover"  width="100%" cellspacing="0">
                
                        @if(devices == null)
                        {
                            <text>Loading...</text>
                        }
                        else
                        {
                            <thead>
                                <tr>
                                    <th>
                                        Type
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Model
                                    </th>
                                    <th>
                                        Status
                                    </th>   
                                </tr>
                            </thead>
                            <tbody>
                            @foreach(var dev in devices)
                            {
                            <tr>
                                <th>
                                    @dev.Type
                                </th>
                                <th>
                                    @dev.Name
                                </th>
                                <th>
                                    <text>here's model</text>
                                </th>
                                <th>
                                    <text>here's status</text>
                                </th>   
                            </tr>
                            }
                            </tbody>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code

{   [Parameter]
    public string Index {get;set;}
    
    List<ModuleViewModel> devices = null;
    List<MeteringModel> meterings = null;
        protected override async Task OnInitializedAsync()
        {

            int ind = int.Parse(Index);
            devices = await client.GetJsonAsync<List<ModuleViewModel>>("api/locations/getmodules");
            meterings = await client.GetJsonAsync<List<MeteringModel>>("api/locations/getmeterings");
            CreateChart();

        }
        protected void CreateChart()
        {
            var values = meterings.Select(m => m.Value).ToArray();
            var dates = meterings.Select(m => m.Date.ToString()).ToArray();
            jsRuntime.InvokeVoidAsync("CreateChart", values, dates);
        }
        
}